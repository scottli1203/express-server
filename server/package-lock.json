<div style={{backgroundColor:'#97FFFF',width:'650px'}}>
        <div>
            <div style={{'color':'#c3c3c3',padding:'10px',fontWeight:500, fontSize:'16px',display:'inline-block'}}>添加关联文档</div>
            <div style={{'float':'right',fontSize:'20px',padding:'2px',display:'inline-block'}} onClick={() => closeModal()}>
              <i className='fa fa-times'></i>
            </div>
        </div>
        <Row>
          <Col span={12} style={{fontSize:'16px'}}>
            <span style={{padding:'10px'}}>文档类型：</span>
            <Select defaultValue="lucy" style={{ width: 200 }} onChange={() => {this.handleChange}}>
                      <Option value="jack">Jack</Option>
                      <Option value="lucy">Lucy</Option>
                      <Option value="disabled" disabled>Disabled</Option>
                      <Option value="Yiminghe">yiminghe</Option>
                    </Select>
          </Col>
          <Col span={12} style={{fontSize:'16px'}}>
            <span style={{padding:'10px'}}>文档名称：</span>
            <Input style={{ width: 200 }} placeholder="输入文档名称" />
          </Col>
        </Row>
        <div style={{fontSize:'16px',marginTop:'10px'}}>
            <span style={{padding:'10px'}}>文档地址：</span>
            <Input style={{ width: 470 }} placeholder="输入文档地址" />
            <a style={{paddingLeft:'20px'}}>添加</a>
        </div>
        <Table dataSource={dataSource} columns={columns} pagination={false} bordered
               style={{width:'90%',backgroundColor:'white',margin:'0 auto', marginTop:'20px' }}/>

        <Row style={{marginTop:'20px',paddingBottom:'10px'}}>
          <Col span={11}>
            <Button style={{width:'80px',float:'right'}} onClick={() => closeModal()}>取消</Button>
          </Col>
          <Col span={13}>
            <Button style={{width:'80px',marginLeft:'20px'}}>保存</Button>
          </Col>
        </Row>
      </div>
